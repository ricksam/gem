@section Scripts{
    <!--Load the AJAX API-->
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script>
        let Cod_Comum = @(DefaultComum);

        $(document).ready(()=>{
            Graficos()
        })

        function ComumChange(e){
            Cod_Comum = $(e).val();
            Graficos()
        }

        function Graficos(){
            rsp.get(null, "/Graficos/Index?Cod_Comum=" + Cod_Comum, "#Graficos");
        }
    </script>
    
