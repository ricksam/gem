@model GEM.Repository.Estudo
@{
    Layout = null;
}

<div class="alert alert-danger" role="alert">
    This is a danger alertï¿½check it out!
</div>

<div class="row">
    <input type="hidden" name="Cod_Estudo" value="@(Model.Cod_Estudo)" />
    
    <div class="form-group col-sm-6">
        <label class="control-label">Presenca</label>
        @await Html.PartialAsync("~/Views/Shared/_Combo.cshtml", new GEM.Models.Combo(){
            Class="form-control",
            Name="Cod_Presenca",
            Items=GEM.Repository.Presenca.List().Select(e=>new ComboItem(){Text=e.Data.ToString("dd/MM/yyyy"),Value=e.Cod_Presenca.ToString()}).ToList(),
            SelectedItem=Model.Cod_Presenca.ToString()            
        })
    </div> 
    <div class="form-group col-sm-6">
        <label class="control-label">Tipo</label>
        @await Html.PartialAsync("~/Views/Shared/_Combo.cshtml", new GEM.Models.Combo(){
            Class="form-control",
            Name="Cod_Tipo",
            Items=GEM.Repository.TipoEstudo.List().Select(e=>new ComboItem(){Text=e.Nome,Value=e.Cod_Tipo.ToString()}).ToList(),
            SelectedItem=Model.Cod_Tipo.ToString()            
        })
    </div> 
    <div class="form-group col-sm-6">
        <label class="control-label">Numero</label>
        <input type="text" class="form-control" name="Numero" value="@(Model.Numero)" />
    </div> 
    <div class="form-group col-sm-6">
        <label class="control-label">Observacao</label>
        <input type="text" class="form-control" name="Observacao" value="@(Model.Observacao)" />
    </div> 
    <div class="form-group col-sm-6">
        <label class="control-label">Instrutor</label>
        <input type="text" class="form-control" name="Instrutor" value="@(Model.Instrutor)" />
    </div> 
</div> 
